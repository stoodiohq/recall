{
  "name": "recall-cli",
  "version": "0.1.0",
  "description": "Team memory for AI coding assistants",
  "type": "module",
  "bin": {
    "recall": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --watch",
    "start": "node dist/index.js",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "glob": "^11.0.0",
    "ini": "^5.0.0",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@types/ini": "^4.1.1",
    "@types/node": "^22.10.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20"
  }
}
